<%= form_for(employee, html: { class: 'form-horizontal' }) do |form| %>
    <% if employee.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
            <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

            <ul>
                <% employee.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class = "container">
        <div class="card">
            <div class="card-body">
                <div class = "row">
                    <div class="col col-lg-4">
                        <%= form.label :first_name, class: 'form-label' %>
                        <%= form.text_field :first_name, class: 'form-control' %>
                    </div>

                    <div class="col col-lg-4">
                        <%= form.label :last_name, class: 'form-label' %>
                        <%= form.text_field :last_name, class: 'form-control' %>
                    </div>

                    <div class="col col-lg-4">
                        <div class= "form-label">Email Address</div>
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon-email">@</span>
                            <%= form.email_field :email, class: 'form-control', placeholder: 'Email', 'aria-label': 'Email', 'aria-describedby': 'basic-addon-email' %>
                        </div>
                    </div>
                </div>


                <div class = "row">
                    <div class="col mb-3">
                        <%= form.label :designation, class: 'form-label' %>
                        <%= form.text_field :designation, class: 'form-control' %>
                    </div>

                    <div class="col mb-3">
                        <%= form.label :department_id, "Department", class: 'form-label' %>
                        <%= form.collection_select :department_id, Department.all, :id, :name,
                                                { include_blank: 'Choose...' }, 
                                                { class: 'form-select' } %>
                    </div>

                </div>

                <div class = "bottom_buttons">
                    <div class="actions">
                        <div class="mb-3">
                            <%= button_tag type: 'submit', class: 'btn btn-primary' do %>
                                <i class="fa-solid fa-check"></i> Confirm
                            <% end %>
                        </div>
                    </div>
                    <%= link_to 'Back', employees_path %>
                </div>

            </div>
        </div>

    </div>

<% end %>
