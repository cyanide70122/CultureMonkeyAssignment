<div class="container">
    <div class="card">
        <div class="card-body">
            <%= form_for(department) do |form| %>
                <% if department.errors.any? %>
                    <div id="error_explanation" class="alert alert-danger">
                        <h4 class="alert-heading"><%= pluralize(department.errors.count, "error") %> prohibited this department from being saved:</h4>
                        <ul>
                            <% department.errors.full_messages.each do |message| %>
                                <li><%= message %></li>
                            <% end %>
                        </ul>
                    </div>
                <% end %>

                <div class="mb-3">
                    <%= form.label :name, class: 'form-label' %>
                    <%= form.text_field :name, class: 'form-control' %>
                </div>
                
                <div class="bottom_buttons">
                    <%= button_tag type: 'submit', class: 'btn btn-primary', data: { confirm: 'Are you sure?' } do %>
                        <i class="fa-solid fa-check"></i> Confirm
                    <% end %>

                    <%= link_to 'Back', departments_path %>
                </div>
            <% end %>
        </div>
    </div>
</div>
