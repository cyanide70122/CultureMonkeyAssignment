<%= render 'shared/navbar' %>
<div class= "container">
    <div class = "heading">
        <h1>Departments</h1>
        <%= link_to new_department_path, class: 'btn btn-primary' do %>
            <i class="fas fa-plus"></i> Create
        <% end %>
    </div>
    <table class="table">
        <thead>
            <tr class="table_heading table-secondary">
                <th>Name</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            <% @departments.each do |department| %>
                <tr>
                    <td class = "t_data"><%= department.name %></td>

                    <td class = "t_data table_buttons">
                        <%= link_to edit_department_path(department), class: 'btn ' do %>
                            <i class="fa-solid fa-pen-to-square"></i> Edit
                        <% end %>

                        <%= link_to department, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
                            <i class="fas fa-trash"></i> Delete
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

